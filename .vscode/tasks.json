{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Jekyll Server",
      "type": "shell",
      "command": "./tools/run.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Runs the Jekyll server with live reload."
    },
    {
      "label": "Build Jekyll Site",
      "type": "shell",
      "command": "./tools/test.sh",
      "group": {
        "kind": "build"
      },
      "problemMatcher": [],
      "detail": "Build the Jekyll site for production."
    },
    {
            "label": "Run Chirpy",
            "type": "shell",
            "command": "bundle exec jekyll s --livereload",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Server address:",
                        "endsPattern": "Server running..."
                    }
                }
            ]
        },
        {
            "label": "Open Browser",
            "type": "shell",
            "command": "open http://127.0.0.1:4000", 
            "windows": {
                "command": "start http://127.0.0.1:4000"
            },
            "dependsOn": "Run Chirpy",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        
        
  ]
}
